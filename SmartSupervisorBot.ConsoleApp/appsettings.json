{
  "BotConfiguration": {
    "BotSettings": {
      "BotToken": "your_bot_token",
      "OpenAiToken": "your_OpenAI_token",
      "BaseRequestUrl": "https://api.telegram.org/bot"
    },
    "LanguageDetectionSettings": {
      "Model": "gpt-3.5-turbo-instruct",
      "MaxTokens": 10,
      "Temperature": 0.1,
      "Prompt": "Bitte übersetzen Sie den folgenden Text ins Deutsche und korrigieren Sie ihn, wenn nötig:"
    },
